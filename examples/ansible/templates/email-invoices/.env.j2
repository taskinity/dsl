# Email Server Configuration
EMAIL_SERVER={{ email_server | default('imap.example.com') }}
EMAIL_PORT={{ email_port | default(993) }}
EMAIL_USER={{ email_user | default('your-email@example.com') }}
EMAIL_PASSWORD={{ email_password | default('your-password') }}
EMAIL_FOLDER={{ email_folder | default('INBOX') }}

