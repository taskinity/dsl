# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID={{ aws_access_key_id | default('your_access_key') }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key | default('your_secret_key') }}
AWS_REGION={{ aws_region | default('us-east-1') }}

# Google Cloud Configuration (if using GCP)
GOOGLE_APPLICATION_CREDENTIALS={{ google_application_credentials | default('/path/to/credentials.json') }}

# Azure Configuration (if using Azure)
AZURE_SUBSCRIPTION_ID={{ azure_subscription_id | default('your_subscription_id') }}
AZURE_TENANT_ID={{ azure_tenant_id | default('your_tenant_id') }}
AZURE_CLIENT_ID={{ azure_client_id | default('your_client_id') }}
AZURE_CLIENT_SECRET={{ azure_client_secret | default('your_client_secret') }}

# Processing Settings
OUTPUT_DIR={{ output_dir | default('./output') }}
LOG_LEVEL={{ log_level | default('INFO') }}
